<html>
<head>
  <meta charset="utf-8">
  
  <title>Liberty FootWear</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
  
 
</head>
<body class="hold-transition sidebar-mini">
	
	<div class="wrapper">
		
		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
		<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item">
				<a class="nav-link" data-widget="pushmenu" href="#" role="button"> 
                                           <i class="fas fa-bars"></i></a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
				<a href="/" class="nav-link">Home</a>
				</li>
			</ul>
		</nav>
		<!-- /.navbar -->
		
		<aside class="main-sidebar sidebar-dark-primary elevation-4">
		<!-- Brand Logo -->
			<a href="#" class="brand-link">
			  <img src="LibertyLogo.jpg"
				   alt="Liberty Footwear Logo"
				   class="brand-image img-circle elevation-3">
			  <span class="brand-text font-weight-light">Liberty Footwear</span>
			</a>
			<!-- Sidebar -->
			<div class="sidebar">
			<!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item">
                        <a href="/stockDetails" class="nav-link">
                            <i class="nav-icon far fa-circle text-info"></i>
                            <p class="text">Stock Details</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/ProductAdditionForm" class="nav-link">
                            <i class="nav-icon far fa-circle text-info"></i>
                            <p>Add Product</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/UpdateForm" class="nav-link">
                            <i class="nav-icon far fa-circle text-info"></i>
                            <p class="text">Update Stock</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/DeleteForm" class="nav-link">
                            <i class="nav-icon far fa-circle text-info"></i>
                            <p class="text">Delete Product</p>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
			</div>
			<!-- /.sidebar -->
		</aside>
		
		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			
			<section class="content-header">
				<h1>Liberty FootWear Inventory Management</h1>
			</section>
			
			<section class="content">
				<div class="card">
                    <div class="card-header">
                      <h3 class="card-title">Product Addition Form</h3>
                    </div>
                    <form action="/AddData" method="POST">
                        <div class="card-body">
                          <div class="form-group">
                            <label>Product Id : </label>
                            <input type="number" class="form-control" placeholder="Enter product ID" name="pid">
                          </div>
                          <div class="form-group">
                            <label>Product Category : </label>
                            <input type="text" class="form-control" placeholder="Enter Category" name="category">
                          </div>
                          <div class="form-group">
                            <label>Type of the product : </label>&nbsp;
                            <input type="text" class="form-control" placeholder="Enter type" name="type">
                          </div>
                          <div class="form-group">
                            <label>Size : </label>
                            <input type="number" class="form-control" placeholder="Enter size" name="size">
                          </div>
                          <div class="form-group">
                            <label>Stock : </label>
                            <input type="number" class="form-control" placeholder="Enter stock" name="stock">
                          </div>
                          <div class="form-group">
                            <label>Cost price : </label>
                            <input type="number" class="form-control" placeholder="Enter Cost" name="cp">
                          </div>
                          <div class="form-group">
                            <label>Selling price : </label>
                            <input type="number" class="form-control" placeholder="Enter SP" name="sp">
                          </div>
                          <div class="form-group">
                            <button type="submit" class="btn btn-primary">Submit</button>
                          </div>
                        </div>
                      </form>
                </div>
			</section>
		</div>
		
	</div>
</body>
</html>