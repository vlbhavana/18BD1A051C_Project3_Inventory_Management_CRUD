<html>
<head>
  <meta charset="utf-8">
  
  <title>Liberty FootWear</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
  
 
</head>
<body class="hold-transition sidebar-mini">
	
	<div class="wrapper">
		
		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
		<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item">
				<a class="nav-link" data-widget="pushmenu" href="#" role="button"> 
                                           <i class="fas fa-bars"></i></a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
				<a href="/" class="nav-link">Home</a>
				</li>
			</ul>
		</nav>
		<!-- /.navbar -->
		
		<aside class="main-sidebar sidebar-dark-primary elevation-4">
		<!-- Brand Logo -->
			<a href="#" class="brand-link">
			  <img src="LibertyLogo.jpg"
				   alt="Liberty Footwear Logo"
				   class="brand-image img-circle elevation-3">
			  <span class="brand-text font-weight-light">Liberty Footwear</span>
			</a>
			<!-- Sidebar -->
			<div class="sidebar">
			<!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item">
                        <a href="/stockDetails" class="nav-link">
                            <i class="nav-icon far fa-circle text-info"></i>
                            <p class="text">Stock Details</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/ProductAdditionForm" class="nav-link">
                            <i class="nav-icon far fa-circle text-info"></i>
                            <p>Add Product</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/UpdateForm" class="nav-link">
                            <i class="nav-icon far fa-circle text-info"></i>
                            <p class="text">Update Stock</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/DeleteForm" class="nav-link">
                            <i class="nav-icon far fa-circle text-info"></i>
                            <p class="text">Delete Product</p>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
			</div>
			<!-- /.sidebar -->
		</aside>
		
		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			
			<section class="content-header">
				<h1>Liberty FootWear Inventory Management</h1>
			</section>
			
			<section class="content">
				<div class="card">
                    <div class="card-header">
                      <h3 class="card-title">Stock Details</h3>
                
                      <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                          <i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                          <i class="fas fa-times"></i></button>
                      </div>
                    </div>
                    <div class="card-body table-responsive p-0" style="height: 400px;">
                        <table class="table table-striped table-head-fixed text-nowrap">
                        <thead>
                            <tr>
                                <th style="width: 10%" >Product ID</th>
                                <th style="width: 10%" >Category</th>
                                <th style="width: 10%" >Type</th>
                                <th style="width: 10%" >Size</th>
                                <th style="width: 15%" >Stock</th>
                                <th style="width: 10%" >Cost Price</th>
                                <th style="width: 10%" >Selling Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i<data.length; i++){ %>
                                <tr>
                                    <td><%= data[i].pid %></td>
                                    <td><%= data[i].category %></td>
                                    <td><%= data[i].type %></td>
                                    <td><%= data[i].size %></td>
                                    <td>
                                        <div class="progress progress-xs">
                                          <div class="progress-bar bg-success" style="width:<%= data[i].stock %>%"></div>
                                        </div>
                                        <small><%= data[i].stock %></small>
                                    </td>
                                    <td><%= data[i].cp %></td>
                                    <td><%= data[i].sp %></td>
                                    <!--<td class="project-actions text-right">
                                        <a class="btn btn-info btn-sm" href="#"><i class="fas fa-pencil-alt"></i>Edit</a>
                                        <a class="btn btn-danger btn-sm" href="#" ><i class="fas fa-trash"></i>Delete</a>
                                    </td>-->
                                </tr>
                            <% } %>
                        </tbody>
                        </table>
                        </div>
                </div>
			</section>
		</div>
		
	</div>
</body>
</html>